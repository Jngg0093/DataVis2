{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A radar chart example, showing multiple dimensions in a radial layout.",
    "height": 300,
    "width": 500,
    "padding": 40,
    "autosize": {"type": "none", "contains": "padding"},
    "data": [
        {"name":"table", 
        "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/RussiavsUkraine%20copy.csv",
        "format": {"type": "csv"}     
        },
        {
        "name": "folded",
        "source": "table",
        "transform": [
          {
            "type": "fold",
            "fields": [
              "Spending",
              "Size",
              "Aircraft",
              "Land",
              "Artillery"
            ]
          }
        ]
      },
        
          {
      "name": "keys",
      "source": "folded",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["key"],
          "fields": ["value", "value"],
          "ops": ["min", "max"]
        }
      ]
    }
        ],
      
  
    "signals": [
      {"name": "radius", "value": 180}
    ],
  
    "scales": [
    {
      "name": "angle",
      "type": "point",
      "range": {"signal":"[PI/2, 5*PI/2]"},
      "padding": 0.5,
      "domain": {"data": "keys", "field": "key"}
    },
    {
      "name": "Spending",
      "type": "linear",
      "range": {"signal": "[0, 160]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "Spending"}
    },
    {
      "name": "Size",
      "type": "linear",
      "range": {"signal": "[0, 160]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "Size"}
    },
    {
      "name": "Land",
      "type": "linear",
      "range": {"signal": "[0, 160]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "Land"}
    },
    {
      "name": "Aircraft",
      "type": "linear",
      "range": {"signal": "[0, 160]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "Aircraft"}
    },
    {
      "name": "Artillery",
      "type": "linear",
      "range": {"signal": "[0, 160]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "Artillery"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "Country"},
      "range": ["#FFDD00","#E4181C"]
    }
  ],

  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "folded", "name": "facet", "groupby": "Country"}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "x": {
                "signal": "scale(datum.key, datum.value) * cos(scale('angle', datum.key))"
              },
              "y": {
                "signal": "scale(datum.key, datum.value) * sin(scale('angle', datum.key))"
                },
              "stroke": {"scale": "color", "field": "Country"},
              "strokeWidth": {"value": 2},
              "interpolate": {"value": "linear-closed"},
              "fill": {"scale": "color", "field": "Country"},
              "fillOpacity": {"value": 0.2},
              "strokeOpacity": {"value": 1}
            }
          }
        },
        {
          "type": "text",
          "name": "value-text",
          "from": {"data": "category-line"},
          "encode": {
            "enter": {
              "x": {"signal": "datum.x"},
              "y": {"signal": "datum.y"},
              "text": {"signal": "datum.datum.value"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fill": {"value": "black"}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"signal": "1 * radius * cos(scale('angle', datum.key))"},
          "y": {"signal": "1 * radius * sin(scale('angle', datum.key))"},
          "x2": {"value": 0},
          "y2": {"value": 0},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
        "name": "label",
        "from": {"data": "keys"},
        "type": "text",
        "encode": {
          "update": {
            "x": {"signal": "1.2 * radius * cos(scale('angle', datum.key))"},
            "y": {"signal": "1.2 * radius * sin(scale('angle', datum.key))"},
            "baseline": {"value": "top"},
            "text": {"field": "key"},
            "align": {"value": "center"},
            "fontWeight": {"value": "bold"}
          }
        }
      }
  ]
}