{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Proportion of Military Spending to GDP",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/military_spending.csv",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
    {
    "lookup": "properties.NAME",
    "from": {
    "data": {
    "url": ""
    },
    "key": "Country",
    "fields": ["2022"]
    }
    },
    {"calculate": "datum.2022*100", "as": "Military Spending as Proportion of GDP"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
    "field": "2022",
    "type": "quantitative",
    "scale": {"type": "log"}
    },
    "tooltip": [
    {"field": "properties.Country", "type": "nominal", "title":
    "Country"},
    {"field": "2022", "type": "quantitative"}
    ]
    }
    }