{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Estimated number of Ukranian Refugees as at 12 Sep ",
  "config":{
    "view": {"stroke":"transparent"}},
  "vconcat":[{
    "width":700,
    "height": 400,
    "projection": {
      "type": "azimuthalEquidistant",
      "rotate":[-60, 0]
      },
    "data": {
      "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Visualisation/cutne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer": [ 
      {
        "data": {
                    "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Visualisation/cutne_110m.json",
            "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "#ADD8E6"}
      },

      {
      "data": {
          "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Visualisation/cutne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "darkgray"}
      }, 

      {
        "transform": [
          {"calculate": "'No Ukranian refugees were officially recorded in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgrey"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {"transform": [
          {
          "lookup": "properties.NAME",
          "from": {
              "data": {
              "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/refugeescleaned.csv"
              },
              "key": "Country",
              "fields": ["Number of refugees"]
          }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "lightgray"},
        "encoding": {
            "color": {
            "field": "Number of refugees",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [0],
                "range":["red", "green"]
              }
            },
            "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Number of refugees", "type": "quantitative", "format":".0f", "title":"Number of refugees"}
            ]
        }
      },
      {
      "data": {
        "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/refugeescleaned.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"field": "Number of refugees", "scale": {
                "type": "threshold",
                "domain": [50000, 100000, 500000, 1000000],
                "range":[10, 30, 50, 70, 100]
              }},
        "color": {"value": "Black"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/refugeescleaned.csv"
      },
      "transform": [
        {"calculate": "48.3794",
          "as": "origin_latitude"
        },
        {"calculate": "31.1656",
          "as": "origin_longitude"
        },
        {"filter":{"param": "pts"}}
      ],
      "mark": "rule",
      "encoding": {
        "longitude": {
          "field": "origin_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "origin_latitude",
          "type": "quantitative"
        },
        "longitude2": {"field": "longitude"},
        "latitude2": {"field": "latitude"},
        "color": {
          "condition": {"param":"pts", "empty": false, "value":"black"},
          "value": "grey"
        },
        "strokeWidth": {"condition":
          {"param":"pts", "empty": false, "value":3},
          "value": 1
        }
      }
    }, 
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/Russia-Ukraine-Location.csv"    
        },
        "encoding": {
        "color": {"value": "black"},
        "longitude": {"field": "Longitude", "type":"quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "opacity": {
          "condition": {
            "test": "datum.Country == 'Ukraine'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "2022", "type": "quantitative", "format":".2%", "title":"Spend (% of GDP)"}
          ]
        },
        "layer":[{
          "mark": {
            "type": "circle"
        }
        },
        {"mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "fontSize": 12,
        "dy": -10
        }}]
      }
    ]
  },
    {"width": 800,
"description": "A scatterplot showing horsepower and miles per gallons for various cars.",
 "params":[
    {"name":"pts", "select": {"type":"point", "fields": ["Country"]}}
  ],
"data": {"url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/refugees.csv"},
"transform": [
  {"calculate": "datum['Number of refugees']/datum['2022']", "as": "Refugees Per 1000 Capita"}
],
"mark": {"type":"circle"},
"encoding": {
  "x": {"field": "Number of refugees", "type": "quantitative"},
  "y": {"field": "Refugees Per 1000 Capita", "type":"quantitative"},
  "tooltip":[{"field": "Country", "type": "nominal", "title": "Country:"},
  {"field": "Number of refugees", "type": "quantitative", "title": "Number of refugees:"},
  {"field":"2022", "type": "quantitative", "title":"Population (Thousands):"}
  ],
  "size": {"condition": {"param":"pts", "empty": false, "value":150},
          "value": 50},
  "color": {
    "condition": {"param":"pts", "empty": false, "value":"green"},
          "value": "grey"
  }
}
}
]
}