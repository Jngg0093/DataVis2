{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300, "height": 200,
    "data": {
      "url": "https://raw.githubusercontent.com/Jngg0093/DataVis2/main/Data%20Visualisation%202/Data/spending_time.csv", 
      "format":{"type": "csv"}
      },
    "transform": [{"fold": ["2000","2001","2002","2003","2004","2005","2006","2007","2008","2009","2010","2011","2012","2013","2014","2015","2016","2017","2018","2019","2020","2021","2022"]}],
    "mark": "area",
    "encoding": {
      "x": {
        "field": "key",
        "type": "ordinal"
      },
      "y": {
        "aggregate":"sum",
        "field":"value",
        "axis": null,
        "stack": "center"
      },
      "color": {"field":"Country", 
      "condition":{"scale":{"scheme": "category20b"}},
      "tooltip":{"field":"Country"}
    }
  }
  